<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageActivity">
    <Button
        android:id="@+id/delete"
        android:layout_width="184dp"
        android:layout_height="53dp"
        android:layout_marginBottom="92dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/change"
        android:layout_width="407dp"
        android:layout_height="61dp"
        android:layout_marginBottom="156dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameModel"
        android:layout_width="106dp"
        android:layout_height="85dp"
        android:layout_marginTop="172dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="237dp"
        android:visibility="gone"
        android:layout_height="59dp"
        android:layout_marginTop="176dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sec_name"
        android:layout_width="366dp"
        android:layout_height="77dp"
        android:layout_marginTop="204dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sec_desc"
        android:layout_width="366dp"
        android:layout_height="77dp"
        android:layout_marginTop="84dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/sec_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sec_name"
        app:layout_constraintTop_toBottomOf="@+id/sec_name" />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>